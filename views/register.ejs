<div class="login-box">
    <h1>Register</h1>
    <div class="form-box">
        <form action="/register" method="POST">
                <div class="form-in"><input  type="text" name="name" value="<%= user.name %>" required/> <label class="label-name" for="name"><span class="content-dt">Full Name</span></label></div>
                <div class="form-in"><input autocomplete="email" type="email" name="email" value="<%= user.email %>" required/><label class="label-name" for="email"><span class="content-dt">E-mail</span></label></div>     
                <div class="form-in"><input type="password" name="password" required/><label class="label-name" for="password"><span class="content-dt">Password</span></label></div>
                <%- include('./partials/AuthErrorMsg') %>
            <button type="submit"> Register Now </button>
        </form>
        <div class="acc-pag">
        <p>If you have account You can login from here !</p>
        <a class="btn" href="/login"> I have account </a>
        </div>
    </div>
</div>